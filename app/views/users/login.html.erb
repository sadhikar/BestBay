<h1>Login</h1>
<%= form_for('/login') do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <% render "layouts/search" %>
    <div class="field">
      <%= f.label :email %>
      <br/>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <br/>
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit "Login" %>
      <%= f.submit "Cancel" %>
    </div>
<% end %>
